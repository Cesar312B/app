   {{ include('solicitud/_form.html.twig') }}

    <table class="table">
        <thead>
            <tr>
                <th>Archivo</th>
                <th>Fecha</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for solicitud in solicituds %}
