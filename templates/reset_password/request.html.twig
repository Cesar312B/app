{% extends 'login_base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1>Recuperar Contraseña</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Ingrese su dirección de correo electrónico y le enviaremos un
                enlace para restablecer su contraseña.
            </small>
        </div>

        <button class="btn btn-primary">Enviar correo electrónico de restablecimiento de contraseña</button>
    {{ form_end(requestForm) }}
     <a href="{{ path('app_login') }}" class="font-italic text-muted"> 
  <u> Regresar al inicio de Sesion</u></a>
{% endblock %}
