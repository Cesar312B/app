{% extends 'login_base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
     <h5>Estudiante</h5>
    </br>
     <div class="form-group mb-3">
     <label for="inputUsername">Usuario</label>
     <input type="text" value="{{ last_username }}" name="username" id="inputUsername"  placeholder="Ingrese su cedula" class="form-control  shadow-sm px-4" required autofocus>
    </div>
     <div class="form-group mb-3">
    <label for="inputPassword">Contraseña</label>
    <input type="password" name="password" id="inputPassword" class="form-control  shadow-sm px-4 text-primary" placeholder="Su cedula es la contraseña" required>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">
    </div>

    
     <div class="text-center d-flex justify-content-between mt-4"><p><a href="{{ path('inicio') }}" class="font-italic text-muted"> 
  <u>Inicio</u></a></p></div>
                    
<button  class="btn btn-primary btn-block text-uppercase mb-2 rounded-pill shadow-sm" type="submit">
        Iniciar sesion
    </button>
    

   

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

</form>
{% endblock %}
